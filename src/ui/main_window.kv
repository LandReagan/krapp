#:import StatusBar ui.status_bar.StatusBar
#:import TitleBar ui.title_bar.TitleBar
#:import ConnectionScreen ui.connection_screen.ConnectionScreen
#:import BasicControlsScreen ui.basic_controls_screen.BasicControlsScreen
#:import NavigationBar ui.navigation_bar.NavigationBar
#:include ui/colors.kv

<MainWindow>:

    title_bar: title_bar
    navigation_bar: navigation_bar
    screen_manager: screen_manager
    status_bar: status_bar


    on_size: root.on_size_changed()

    canvas:
        Color:
            rgba: default_background_color
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'vertical'

    TitleBar:
        id: title_bar
        size_hint_y: .15

    NavigationBar:
        id: navigation_bar
        size_hint_y: .15

    ScreenManager:
        id: screen_manager
        ConnectionScreen:
        BasicControlsScreen:

    StatusBar:
        id: status_bar